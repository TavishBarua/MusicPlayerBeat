                    android:id="@+id/textview_equalizer_preset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Preset:"
                    tools:ignore="HardcodedText" />

