                    android:layout_weight="1"
                    android:text="31 Hz"
                    tools:text="31 Hz" />

            <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_equalizer_band_0"
                    android:layout_width="0dp"
                    android:max="31"
                    android:progress="16"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />
